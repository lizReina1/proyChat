{
  "extends": "@tsconfig/node18-strictest/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020", "dom"],
    "checkJs": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "exactOptionalPropertyTypes": false,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "./"
  },
  "exclude": ["dist"],
  "include": ["src/**/*"]
}
